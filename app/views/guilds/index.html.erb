<h1>Guild List</h1>

<%= link_to 'New guild', new_guild_path %>
<table>
  <tr>
    <th>id</th>
    <th>guild_master</th>
    <th colspan='3'></th>
  </tr>

  <% @guilds.each do |guild| %>
    <tr>
      <td><%= guild.id %></td>
      <td><%= guild.guild_master %></td>
      <td><%= link_to 'Show', guild_path(guild) %></td>
      <td><%= link_to 'Edit', edit_guild_path(guild) %></td>
      <td><%= link_to 'Delete', guild_path(guild),
                                method: :delete,
                                data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
