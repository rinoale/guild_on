<h1>BBS</h1>

<% if current_user %>
  <%= link_to 'Write', new_guild_guild_board_path %>
<% end %>
<table>
  <tr>
    <th>title</th>
    <th>author</th>
    <th colspan='3'></th>
  </tr>

  <% @guild_boards.each do |guild_board| %>
    <tr>
      <td><%= guild_board.title %></td>
      <td><%= guild_board.author %></td>
      <td><%= link_to 'Show', guild_guild_board_path(guild, guild_board) %></td>
      <td><%= link_to 'Edit', edit_guild_guild_board_path(guild, guild_board) %></td>
      <td><%= link_to 'Delete', guild_guild_board_path(guild, guild_board),
                                method: :delete,
                                data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
