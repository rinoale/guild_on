<h1>BBS</h1>

<%= link_to 'Write', new_guild_guild_board_path %>
<table>
  <tr>
    <th>title</th>
    <th>author</th>
    <th colspan='3'></th>
  </tr>

  <% @boards.each do |board| %>
    <tr>
      <td><%= board.title %></td>
      <td><%= board.author %></td>
      <td><%= link_to 'Show', guild_guild_board_path(board) %></td>
      <td><%= link_to 'Edit', edit_guild_guild_board_path(board) %></td>
      <td><%= link_to 'Delete', guild_guild_board_path(board),
                                method: :delete,
                                data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
