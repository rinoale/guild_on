<h1>BBS</h1>

<% if current_user %>
  <%= link_to 'Write', new_guild_guild_board_path %>
<% end %>
<div class='large-8'>
  <div class='row'>
    <table>
      <tr>
        <th>no</th>
        <th>title</th>
        <th>author</th>
        <th colspan='3'></th>
      </tr>

      <% @guild_boards.each do |guild_board| %>
        <tr>
          <td><%= guild_board.id %></td>
          <td><%= link_to guild_board.title, guild_guild_board_path(guild, guild_board) %></td>
          <td><%= guild_board.author %></td>
          <% if current_user && guild_board.author == current_user.username %>
          <td><%= link_to 'Edit', edit_guild_guild_board_path(guild, guild_board) %></td>
          <td><%= link_to 'Delete', guild_guild_board_path(guild, guild_board),
                                    method: :delete,
                                    data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div>

  <div class='row'>
    <ul class="pagination text-center" role="navigation" aria-label="Pagination">
      <li class="pagination-previous disabled">Previous</li>
      <li class="current"><span class="show-for-sr">You're on page</span> 1</li>
      <li><a href="#" aria-label="Page 2">2</a></li>
      <li><a href="#" aria-label="Page 3">3</a></li>
      <li><a href="#" aria-label="Page 4">4</a></li>
      <li class="ellipsis"></li>
      <li><a href="#" aria-label="Page 12">12</a></li>
      <li><a href="#" aria-label="Page 13">13</a></li>
      <li class="pagination-next"><a href="#" aria-label="Next page">Next</a></li>
    </ul>
  </div>
</div>
