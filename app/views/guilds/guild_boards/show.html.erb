<% content_for :title, guild.guild_name.to_s %>
<p>
<strong>title</strong>
<%= @guild_board.title %>
</p>

<p>
<strong>content</strong>
<%= @guild_board.content %>
</p>

<p>
<strong>Author</strong>
<%= @guild_board.author %>
</p>

<% if current_user && @guild_board.author == current_user.username %>
  <%= link_to 'Edit', edit_guild_guild_board_path(guild, @guild_board), class: 'button hollow' %>
  <a data-open='deleteBoard' class='button hollow'>Delete</a>
<% end %>

<div class='reveal' id='deleteBoard' data-reveal>
  <h1>Are you sure?</h1>
  <%= link_to 'Yes', guild_guild_board_path(guild, @guild_board), class: 'button', data: { method: 'delete' } %>
  <a class='button' data-close>No</a>
  <button class='close-button' data-close aria-label='Close modal' type='button'>
    <span aria-hidden='true'>&times;</span>
  </button>
</div>
<script>$(document).foundation();</script>
